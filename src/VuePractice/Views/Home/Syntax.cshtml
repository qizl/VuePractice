@{
    ViewBag.Title="模板语法";
}

<partial name="_Base"/>

<div id="app">
    <h2>插值</h2>
    <h5>#文本&nbsp;“Mustache”语法 (双大括号)</h5>
    <pre v-pre>&lt;div&gt;{{message}}&lt;/div&gt;
&lt;div v-once&gt;{{message1}}&lt;/div&gt;
&lt;button v-on:click=&quot;Changed&quot;&gt;Change Message&lt;/button&gt;</pre>
    <div>{{message}}</div>
    <div v-once>{{message1}}</div>
    <button v-on:click="Changed">Change Message</button>
    
    <h5>#原始 HTML</h5>
    <pre v-pre>Using mustaches:{{rawHtml}}
Using v-html directive:&lt;span v-html=&quot;rawHtml&quot;&gt;&lt;/span&gt;</pre>
    <div>Using mustaches:{{rawHtml}}</div>
    <div>Using v-html directive:<span v-html="rawHtml"></span></div>

    <h5>#特性</h5>
    <pre v-pre>&lt;div v-bind:title=&quot;message&quot;&gt;使用v-bind绑定特性，鼠标移过来！&lt;/div&gt;</pre>
    <div v-bind:title="message">使用v-bind绑定特性，鼠标移过来！</div>

    <h5>#使用 JavaScript 表达式</h5>
    <pre v-pre>{{new Date()}}</pre>
    <div>{{new Date()}}</div>

    
    <h2>指令</h2>
    <h5>#参数</h5>
    <pre v-pre>&lt;a v-bind:href=&#39;url&#39; target=&quot;_blank&quot;&gt;{{url}}&lt;/a&gt;</pre>
    <a v-bind:href='url' target="_blank">{{url}}</a>
    <input v-model='url'/>
    
    <h5>#动态参数</h5>
    <pre v-pre>&lt;a v-bind:[attr]=&#39;url&#39; target=&quot;_blank&quot;&gt;{{url}}&lt;/a&gt;</pre>
    <a v-bind:[attr]='url' target="_blank">{{url}}</a>
    <input v-model='attr'/>

    <h5>#修饰符</h5>


    <h2>缩写</h2>
    <pre v-pre>&lt;a v-bind:href=&#39;url&#39; target=&quot;_blank&quot;&gt;{{url}}&lt;/a&gt;
&lt;a :href=&#39;url&#39; target=&quot;_blank&quot;&gt;{{url}}&lt;/a&gt;
&lt;a v-on:click=&#39;Clicked&#39;&gt;Click Me!&lt;/a&gt;
&lt;a @@click=&#39;Clicked&#39;&gt;Click Me!&lt;/a&gt;</pre>
    <a v-bind:href='url' target="_blank">{{url}}</a>
    <a :href='url' target="_blank">{{url}}</a>
    <a v-on:click='Clicked'>Click Me!</a>
    <a @@click='Clicked'>Click Me!</a>
</div>

@section Scripts{
    <script src="~/js/base/syntax.js"></script>
}