@{
    ViewBag.Title = "介绍";
}

<div class="text-center">
    <h1 class="display-4" v-bind:title="mt">{{message}}</h1>
</div>
<div>
    <h2>声明式渲染</h2>
    <div v-if="seen">能看到？</div>

    <h2>条件与循环</h2>
    <ol>
        <li v-for="todo in todos">{{todo.text}}</li>
    </ol>

    <h2>处理用户输入</h2>
    <button v-on:click="reverseMessage">点我</button>

    <h2>指令</h2>
    <input v-model="message"/>

    <h2>组件化应用构建</h2>
    <ol>
        <todo-item 
            v-for="item in groceryList" 
            v-bind:todo="item" 
            v-bind:key="item.id">
        </todo-item>
    </ol>
</div>

@section Scripts{
    <script src="~/js/index.js"></script>
}