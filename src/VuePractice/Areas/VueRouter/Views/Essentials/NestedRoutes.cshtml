@{
    ViewBag.Title="Nested Routes";
}

<partial name="_Essentials"/>

<div id="app">
    <h2>Nested Routes</h2>
    <router-link to="/user/1">Go to User1</router-link>
    <router-link to="/user/1/Profile">Go to User1/Profile</router-link>
    <router-link to="/user/2">Go to User2</router-link>
    <router-link to="/user/2/Profile">Go to User2/Profile</router-link>
    <router-view></router-view>

    <h5>#本页脚本：</h5>
    <pre v-pre>&lt;router-link to=&quot;/user/1&quot;&gt;Go to User1&lt;/router-link&gt;
&lt;router-link to=&quot;/user/1/Profile&quot;&gt;Go to User1/Profile&lt;/router-link&gt;
&lt;router-link to=&quot;/user/2&quot;&gt;Go to User2&lt;/router-link&gt;
&lt;router-link to=&quot;/user/2/Profile&quot;&gt;Go to User2/Profile&lt;/router-link&gt;
&lt;router-view&gt;&lt;/router-view&gt;</pre>
    <pre v-pre>const User = {
    template: `
        &lt;div class=&quot;user&quot;&gt;
            &lt;p&gt;User {{ $route.params.id }}&lt;/p&gt;
            &lt;router-view&gt;&lt;/router-view&gt;
        &lt;/div&gt;
    `
}

const UserProfile={
    template:&#39;&lt;div&gt;This is UserProfile&lt;/div&gt;&#39;
}

const UserPosts={
    template:&#39;&lt;div&gt;This is UserPosts&lt;/div&gt;&#39;
}

const router = new VueRouter({
    routes: [{
        path: &#39;/user/:id&#39;,
        component: User,
        children: [{
            path: &#39;profile&#39;,
            component: UserProfile
        }, {
            path: &#39;posts&#39;,
            component: UserPosts
        }]
    }]
})

const app = new Vue({
    router
}).$mount(&#39;#app&#39;)</pre>
</div>

@section Scripts{
    <script src="https://unpkg.com/vue-router/dist/vue-router.js"></script>
    <script src="~/js/vuerouter/essentials/nestedroutes.js"></script>
}